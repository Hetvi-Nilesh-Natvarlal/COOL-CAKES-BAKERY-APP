<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDCFC5">

        <ImageView
            android:id="@+id/cart_pro_img"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/cart_pro_price"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:text="Price" />

        <TextView
            android:id="@+id/cart_pro_name"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@id/cart_pro_price"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:text="Name" />

        <TextView
            android:id="@+id/cart_pro_flavours"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@id/cart_pro_name"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:text="Flavours" />

        <TextView
            android:id="@+id/cart_pro_quantity"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@id/cart_pro_flavours"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:text="Quantity" />

        <TextView
            android:id="@+id/cart_pro_devprice"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@id/cart_pro_quantity"
            android:layout_toEndOf="@+id/cart_pro_img"
            android:text="Delivery Price" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

