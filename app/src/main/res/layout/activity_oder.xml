<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

<TextView
    android:id="@+id/displayshipment"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:text="Shipment Details"
    android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/o_rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayshipment">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Shipment Info"/>


        <TextView
            android:id="@+id/or_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/or_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/or_name"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/or_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_state"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/or_locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_city"
            android:textColor="@color/black"></TextView>


        <TextView
            android:id="@+id/or_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_locality"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/or_PhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_pincode"
            android:textColor="@color/black"></TextView>
        <TextView
            android:id="@+id/or_TotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_PhoneNo"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/or_devdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_TotalPrice"
            android:textColor="@color/black"></TextView>
    </RelativeLayout>
</RelativeLayout>